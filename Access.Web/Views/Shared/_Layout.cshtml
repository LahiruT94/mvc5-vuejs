@{
	var hasPageScript = System.IO.File.Exists(Server.MapPath("~/Scripts/Vue/admin/admin.js"));
	var hasPageCSS = System.IO.File.Exists(Server.MapPath("~/Scripts/Vue/admin/admin.css"));
}

<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Access</title>
	@Styles.Render("~/Content/css")
	@if (hasPageCSS)
	{
		<link rel="stylesheet" href="/Scripts/Vue/admin/admin.css" />
	}
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("123", "Index", "Home", new { id = "1" }, new { @class = "navbar-brand" })
			</div>
		</div>
	</div>
	<div class="container">
		@RenderBody()
		<div class="footer-group">
			<hr />
			<footer>
				<p>@DateTime.Now.Year – Access &copy; </p>
			</footer>
		</div>
	</div>

	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", false)
	@if (hasPageScript)
	{
		<script src="/Scripts/Vue/admin/admin.js"></script>
	}
</body>
</html>